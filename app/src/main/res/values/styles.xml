    <style name="Theme.Shrine" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="materialButtonStyle">@style/Theme.Shrine.Button</item>
        <item name="textInputStyle">@style/TextInputLayoutAppearance</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/colorButton</item>
        <item name="android:fontFamily">@font/dosis</item>
        <item name="toolbarStyle">@style/Widget.Shrine.Toolbar</item>



    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Theme.Shrine.Title</item>

    </style>

    <style name="Theme.Shrine.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textAppearance">@style/TextAppearance.Theme.Shrine.Button</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="Theme.Shrine.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.Theme.Shrine.Button</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/textColorPrimary</item>
    </style>
    <style name="TextAppearance.Theme.Shrine.Button" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/convergence</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.Theme.Shrine.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/convergence</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:color">@color/textColorPrimary</item>
    </style>
